<!DOCTYPE html>
<html>
<head>
  <title>My Blog</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag "application", media: "all" %>
  <style>
      body {
          margin: 0;
          font-family: system-ui, sans-serif;
      }

      .toggle-btn {
          background: none;
          border: none;
          cursor: pointer;
          font-size: 1rem;
          padding: 1rem;
          color: #007acc;
      }

      .layout {
          display: flex;
          min-height: 100vh;
      }

      .sidebar {
          width: 250px;
          background: #f4f4f4;
          padding: 1rem;
          border-right: 1px solid #ddd;
          transition: width 0.3s ease, padding 0.3s ease;
      }

      .sidebar.collapsed {
          width: 0;
          padding: 0;
          overflow: hidden;
      }

      .sidebar h3, .sidebar ul {
          margin-left: 1rem;
      }

      .sidebar ul {
          list-style: none;
          padding-left: 0;
      }

      .sidebar li {
          margin: 0.5rem 0;
      }

      .sidebar a {
          text-decoration: none;
          color: #333;
      }

      .sidebar a:hover {
          color: #007acc;
      }

      .main-content {
          flex: 1;
          padding: 2rem;
      }
  </style>
</head>
<body>
<button class="toggle-btn" onclick="toggleSidebar()">â˜° Toggle Menu</button>

<div class="layout">
  <aside class="sidebar" id="sidebar">
    <h3>All Posts</h3>
    <ul>
      <% BlogPost.order(created_at: :desc).each do |post| %>
        <li><%= link_to post.title, blog_post_path(post) %></li>
      <% end %>
    </ul>
  </aside>

  <main class="main-content">
    <%= yield %>
  </main>
</div>

<script>
    function toggleSidebar() {
        const sidebar = document.getElementById("sidebar");
        sidebar.classList.toggle("collapsed");
    }
</script>
</body>
</html>
